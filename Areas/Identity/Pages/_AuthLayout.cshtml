@{ 
    Layout = "/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card login-logout-tab">
                    <div class="card-header">
                        <ul class="navbar nav-tabs card-header-tabs">
                            <li class="nav-item">
                                <a href="/Identity/Account/Login" class="nav-link">Logare</a>
                            </li>
                            <li class="nav-item">
                                <a href="/Identity/Account/Register" class="nav-link">Inscriere</a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-content">
                        <div class="row">
                            <div class="col-md-12">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section Scripts {

@RenderSection("Scripts", required: false);

<script>
    var current = location.pathname;
    $('.nav-tabs li a').each(() => {
        var $this = $(this);
        if (current.indexOf($this.attr('href')) > -1) {
            $this.addClass('active');
        }
    });
</script>
}